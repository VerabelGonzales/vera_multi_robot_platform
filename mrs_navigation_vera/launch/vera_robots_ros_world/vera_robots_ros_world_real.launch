<launch>
  <!-- Arguments -->
  <arg name="open_rviz" default="true"/>
  <arg name="map_file" default="$(find ros_world)/maps/map_2.yaml"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Arguments Namespace Robots-->
  <arg name="namespace_1" default="robot_1"/>
  <arg name="namespace_2" default="robot_2"/>
  <arg name="namespace_3" default="robot_3"/>
  
  <!-- rviz -->
  <arg name="rvizconfig" default="$(find mrs_navigation_vera)/rviz/vera_robots_ros_world.rviz"/>
  <node if="$(arg open_rviz)" name="rviz" pkg="rviz" type="rviz" respawn="false" args="-d $(arg rvizconfig)"/>

  <!--******************************************************************************************************************************-->
  <group ns="$(arg namespace_1)">
    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="odom" />
    </node>

    <!-- Static tf between map and odom -->
    <arg name="static_tf" default="true" />
    <node if="$(arg static_tf)" pkg="tf2_ros" type="static_transform_publisher" name="odom_wrt_map_tf" args="0 0 0 0 0 0 map odom" />
  </group>

  <group ns="$(arg namespace_2)">
    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="odom" />
    </node>

    <!-- Static tf between map and odom -->
    <arg name="static_tf" default="true" />
    <node if="$(arg static_tf)" pkg="tf2_ros" type="static_transform_publisher" name="odom_wrt_map_tf" args="0 0 0 0 0 0 map odom" />
  </group>

  <group ns="$(arg namespace_3)">
    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="odom" />
    </node>

    <!-- Static tf between map and odom -->
    <arg name="static_tf" default="true" />
    <node if="$(arg static_tf)" pkg="tf2_ros" type="static_transform_publisher" name="odom_wrt_map_tf" args="0 0 0 0 0 0 map odom" />
  </group>
  <!--******************************************************************************************************************************-->

  <!-- move_base -->
  <include file="$(find mrs_navigation_vera)/launch/vera_robots_ros_world/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!--******************************************************************************************************************************-->
  <group ns="$(arg namespace_1)">
    <!-- Start service server that responds with a plan for global path planning -->
    <node pkg="mrs_navigation_vera" name="global_path_planner" type="path_planning_server.py" output="screen"/> 
  </group>

  <group ns="$(arg namespace_2)">
    <!-- Start service server that responds with a plan for global path planning -->
    <node pkg="mrs_navigation_vera" name="global_path_planner" type="path_planning_server.py" output="screen"/> 
  </group>

  <group ns="$(arg namespace_3)">
    <!-- Start service server that responds with a plan for global path planning -->
    <node pkg="mrs_navigation_vera" name="global_path_planner" type="path_planning_server.py" output="screen"/> 
  </group>
  <!--******************************************************************************************************************************-->
</launch>
